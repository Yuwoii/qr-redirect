// This is a simplified schema for local development
// It intentionally uses SQLite to avoid PostgreSQL connection issues

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["metrics"]
}

// Simple SQLite configuration for local development
datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  password      String
  namespace     String    @unique @default(cuid()) // Unique namespace for user's QR codes
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  qrCodes       QRCode[]

  @@index([email]) // Add index for email lookups
  @@index([namespace]) // Add index for namespace lookups
}

model QRCode {
  id            String    @id @default(cuid())
  name          String
  slug          String    // No longer unique globally, but unique per user
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  userId        String
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  redirects     Redirect[]

  @@unique([userId, slug]) // Make slug unique per user
  @@index([userId]) // Add index for user lookups
  @@index([slug]) // Add index for slug lookups
  @@index([createdAt]) // Add index for sorting
}

model Redirect {
  id            String    @id @default(cuid())
  url           String
  isActive      Boolean   @default(true)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  qrCodeId      String
  qrCode        QRCode    @relation(fields: [qrCodeId], references: [id], onDelete: Cascade)
  visitCount    Int       @default(0)

  @@index([qrCodeId]) // Add index for QR code lookups
  @@index([isActive]) // Add index for active redirects
  @@index([createdAt]) // Add index for sorting
} 