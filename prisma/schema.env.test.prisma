// This is a test schema that doesn't rely on environment variables
// Used for testing the schema validation mechanism

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["metrics"]
}

// Using file-based SQLite for testing purposes
// This avoids needing any environment variables
datasource db {
  provider = "sqlite"
  url      = "file:./test.db"
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  qrCodes       QRCode[]

  @@index([email])
}

model QRCode {
  id          String     @id @default(cuid())
  name        String
  description String?
  userId      String
  data        String     @default("https://example.com")
  imageUrl    String?
  backgroundColor String  @default("#FFFFFF")
  foregroundColor String  @default("#000000")
  logoUrl     String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  redirects   Redirect[]
  user        User       @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Redirect {
  id        String   @id @default(cuid())
  qrCodeId  String
  userAgent String?
  ipAddress String?
  referrer  String?
  timestamp DateTime @default(now())
  qrCode    QRCode   @relation(fields: [qrCodeId], references: [id], onDelete: Cascade)

  @@index([qrCodeId])
  @@index([timestamp])
} 