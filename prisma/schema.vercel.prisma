// Vercel-specific Prisma schema
// This schema is optimized for Vercel serverless deployments with Data Proxy or direct connections

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["metrics"]
}

// Vercel database configuration with fallbacks
// This supports both Vercel Data Proxy and direct connections
datasource db {
  provider  = "postgresql"
  // Tries Vercel Postgres connection string first, falls back to DATABASE_URL
  url       = env("POSTGRES_PRISMA_URL")
  // For direct connections when Data Proxy is unavailable (like in Edge functions)
  directUrl = env("POSTGRES_URL_NON_POOLING")
  // Connection pooling configuration to avoid prepared statement conflicts
  extensions = [pgcrypto]
  relationMode = "foreignKeys" // Ensure proper foreign key constraints
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  password      String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  qrCodes       QRCode[]

  @@index([email]) // Add index for email lookups
}

model QRCode {
  id            String    @id @default(cuid())
  name          String
  slug          String    @unique
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  userId        String
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  redirects     Redirect[]

  @@index([userId]) // Add index for user lookups
  @@index([slug]) // Add index for slug lookups
  @@index([createdAt]) // Add index for sorting
}

model Redirect {
  id            String    @id @default(cuid())
  url           String
  isActive      Boolean   @default(true)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  qrCodeId      String
  qrCode        QRCode    @relation(fields: [qrCodeId], references: [id], onDelete: Cascade)
  visitCount    Int       @default(0)

  @@index([qrCodeId]) // Add index for QR code lookups
  @@index([isActive]) // Add index for active redirects
  @@index([createdAt]) // Add index for sorting
} 